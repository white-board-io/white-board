{
  "name": "api",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "npm run build:ts && fastify start -l info -p 8000 dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "bun --watch src/server.ts",
    "dev:legacy": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -p 8000 -P dist/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "6.3.1",
    "@fastify/cors": "11.2.0",
    "@fastify/sensible": "6.0.4",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@repo/auth": "workspace:*",
    "@repo/database": "workspace:*",
    "fastify": "5.7.4",
    "fastify-cli": "7.4.1",
    "fastify-plugin": "5.1.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@types/node": "22.10.2",
    "@types/uuid": "^11.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "9.2.1",
    "eslint": "9.39.1",
    "fastify-tsconfig": "3.0.0",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  }
}
